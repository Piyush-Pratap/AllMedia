<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ui.gallery.GalleryFragmentView">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/galleryImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/galleryImage"
            app:layout_constraintStart_toStartOf="@+id/galleryImage"
            app:layout_constraintTop_toBottomOf="@+id/galleryImage">

            <TextView
                android:id="@+id/folderName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:singleLine="true"
                android:text="hello"></TextView>

            <TextView
                android:id="@+id/folderSize"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:singleLine="true"
                android:text="105"></TextView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>